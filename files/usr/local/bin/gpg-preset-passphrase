#!/bin/bash

read token
if [[ $PAM_USER = root ]]; then
    exit 0
fi

preset=/usr/libexec/gpg-preset-passphrase
gpgconf --launch gpg-agent

keygrips=($(gpg -K --with-colons |
    sed -nr \ '/ssb/,+2{/grp:/s/^grp:+(.*):$/\1/p}'))

for keygrip in "${keygrips[@]}"; do
    $preset -c "$keygrip" <<< "$token"
done

exit 0
